<h1>Login</h1>


<div class="row">
	<div class="col-xs-12">
		<%= form_for(:session, :html => {class: 'form-horizontal'}, url: login_path) do |f| %>


			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :email %>
				</div>
				<div class="col-xs-10">
					<%= f.email_field :email, class: 'form-control', placeholder: 'Username', autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :password %>
				</div>
				<div class="col-xs-10">
					<%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
				</div>
			</div>

			<div class="form-group">
				<%= f.submit("Login", class: 'btn btn-success') %>
			</div>

		<% end %>
	</div>
</div>