<%= render 'shared/errors', obj: @category %>
<div class="row">
	<div class="col-xs-12">
		<%= form_for(@category, :html => {class: 'form-horizontal'}) do |f| %>

			<div class="form-group">
				<div class="control-label col-xs-2">
					<%= f.label :name %>
				</div>
				<div class="col-xs-10">
					<%= f.text_field :name, class: 'form-control', placeholder: 'Category Name', autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<%= f.submit(@category.new_record? ? "Create new" : "Update", class: 'btn btn-success') %>
			</div>

		<% end %>
	</div>
</div>